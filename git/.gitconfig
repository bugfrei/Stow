[init]
    defaultBranch = main
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Users/carstenschlegel/Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[remote]
    pushDefault = origin
[push]
    default = current
    autoSetupRemote = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[diff]
	tool = diffmerge
    colorMoved = default
[difftool "diffmerge"]
	cmd = /opt/homebrew/bin/diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
    conflictstyle = diff3
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /opt/homebrew/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[pull]
    rebase=false

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true   # n / N zum wechseln der Sektionen
  #dark = true
  #light = true

